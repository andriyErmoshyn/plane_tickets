.row
  .col-md-12
    = form_tag routes_path, method: :get, id: "search-form" do

      = hidden_field_tag :direction, params[:direction]
      = hidden_field_tag :sort, params[:sort]

      .row#from-to-inputs
        .col-md-12
          .col-md-5
            = text_field_tag :start_point, params[:start_point], placeholder: "From",
              class: "form-control"
          .col-md-5.col-md-offset-2
            = text_field_tag :end_point, params[:end_point], placeholder: "To",
              class: "form-control"
      .row
        .col-md-12
          .col-md-4.col-md-offset-4
            .form-group
              .input-group
                = text_field_tag :depart, params[:depart], placeholder: "When",
                class: "form-control", id: "date-search"
                %span.input-group-addon
                  %span.glyphicon.glyphicon-calendar
      .row
        .col-md-12
          .col-md-2.col-md-offset-5
            = submit_tag "Search", name: nil, class: "btn btn-primary btn-lg", id: "search-submit"
